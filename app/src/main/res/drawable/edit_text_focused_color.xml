<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <item android:top="38dp"> <!-- Adjust the value to set the underline thickness -->
                <color android:color="@color/primary_blue"/>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <item android:top="39dp"> <!-- Adjust the value to set the underline thickness -->
                <color android:color="@color/gray_border"/>
            </item>
        </layer-list>
    </item>
</selector>