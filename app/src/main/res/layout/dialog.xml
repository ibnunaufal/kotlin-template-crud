<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RoundCorner"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:text="Add Data"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Title"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/editTextId"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/poppinsregular"
                            android:background="@drawable/edit_text_focused_color"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Version Code"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/editTextVersionCode"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/poppinsregular"
                            android:background="@drawable/edit_text_focused_color"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Urgent"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <RadioGroup
                            android:id="@+id/radioGroupIsUrgent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioButtonUrgentTrue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="40dp"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:textSize="14dp"
                                    android:text="True"/>

                                <RadioButton
                                    android:id="@+id/radioButtonUrgentFalse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:textSize="14dp"
                                    android:text="False"/>
                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Migrate"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <RadioGroup
                            android:id="@+id/radioGroupStatusMigrasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioButtonStatusMigrasiTrue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="40dp"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:textSize="14dp"
                                    android:text="True"/>

                                <RadioButton
                                    android:id="@+id/radioButtonStatusMigrasiFalse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:textSize="14dp"
                                    android:text="False"/>
                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Message"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/editTextMsg"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/poppinsregular"
                            android:background="@drawable/edit_text_focused_color"
                            android:textSize="12sp"/>

                        <Button
                            android:id="@+id/postButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textSize="16sp"
                            android:backgroundTint="@color/primary_blue"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:text="Add Data"/>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>